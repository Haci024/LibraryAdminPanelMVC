@model List<Authors>

<div class="container-fluid px-4">
    <h1 class="text-center">Kategoriyalar</h1>
    <ol class="breadcrumb mb-4">
        <a asp-controller="Authors" asp-action="Create" class="btn btn-success">Yazıçı yarat</a>
    </ol>

    <div class="card mb-4">

        <div class="card-body">
            <table id="datatablesSimple">


                <thead>

                    <tr>
                        <th>Yazıçının şəkili</th>
                        <th>Ad Soyad</th>
                        <th>Fəaliyyətlər</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Authors item in Model)
                    {
                        <tr>
                            <td><img src="~/assets/Image/@item.AuthorImage" style="width:100px;height:100px;border-radius:30px" alt="Alternate Text" /></td>
                            <td>@item.Name @item.Surname </td>

                            <td>
                                @if (item.IsDeactive)
                                {
                                    <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-dark">Aktiv et</a>
                                }
                                else
                                {
                                    <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger"><i class="ti-trash"></i>Deaktiv et </a>
                                }
                                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success"><i class="ti-reload"></i>Yenilə</a>
                                <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning">  <i class="fa-duotone fa-book-open"></i></a>
                            </td>

                        </tr>
                    }





                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://kit.fontawesome.com/4d201f46b3.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/js/scripts.js"></script>
    <script src="~/assets/js/datatables-simple-demo.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>

}
