@model Categories
@{
    ViewData["Title"] = "Update";
}
<div class="text-center">
    <h1>Məlumatları Yenilə</h1>
</div>
<div class="container">
    <div>
        <div class="body">
            <form method="post">
                <div class="form-group form-float">

                    <label class="form-label">Kategoriyanın adı  <span class="font-bold col-pink"></span></label>
                    <div class="form-line">
                        <input asp-for="Name" class="form-control">
                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group form-float">
                    <label class="form-label">Kategoriya haqqında <span class="font-bold col-pink"></span></label>
                    <div class="form-line">
                        <input asp-for="Description" class="form-control">
                    </div>
                    <span asp-validation-for="Description" class="text-danger"></span>

                </div>
                <br>
                <div class="text-center">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-primary">Geri qayıt</a>
                    <button type="submit" class="btn btn-success">Yenilə</button>
                </div>

            </form>
        </div>

    </div>
</div>
