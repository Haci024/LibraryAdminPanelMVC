@model List<Categories>

<div class="container-fluid px-4">
    <h1 class="text-center">Kategoriyalar</h1>
    <ol class="breadcrumb mb-4">
      <a asp-controller="Category" asp-action="Create" class="btn btn-success">Kategoriya yarat</a>
    </ol>
  
    <div class="card mb-4">
       
        <div class="card-body">
            <table id="datatablesSimple">


                <thead>

                    <tr>
                        <th>ID</th>
                        <th>Kategoriya</th>
                        <th>Kitabların sayı</th>
                        <th>Fəaliyyətlər</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Categories item in Model)
                    {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Books.Count</td>
                        <td>
                            @if (item.IsDeactive)
                            {
                                <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-dark">Aktiv et</a>
                            }
                            else
                            {
                                <a asp-action="Activity" asp-route-id="@item.Id" class="btn btn-danger"><i class="ti-trash"></i>Deaktiv et </a>
                            }
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-success"><i class="ti-reload"></i>Yenilə</a>
                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-warning"><i class="ti-agenda"></i>Haqqında</a>
                            <a asp-action="Books" asp-route-id="@item.Id" class="btn btn-primary">Kitablar</a>
                        </td>

                    </tr>
                    }
           




                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/assets/js/scripts.js"></script>
    <script src="~/assets/js/datatables-simple-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>

}
